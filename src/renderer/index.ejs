        }
        
        setTimeout(() => {
          const ejsLoading = document.getElementById('ejs-loading');
          if (ejsLoading) {
            ejsLoading.classList.add('hidden');
            setTimeout(() => {
              ejsLoading.style.display = 'none';
            }, 300);
          }
        }, 800);
